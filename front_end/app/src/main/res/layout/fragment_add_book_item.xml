<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AddBookItemFragment"
    android:id="@+id/initLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileFields"
        android:layout_width="415dp"
        android:layout_height="607dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleLayout"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/borderLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/titleTitle" />

            <EditText
                android:id="@+id/titleEditor"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/light_orange"
                android:hint="book title"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/borderLine" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstNameLayout"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/titleLayout"
            app:layout_constraintStart_toStartOf="@id/titleLayout"
            app:layout_constraintTop_toTopOf="@id/titleLayout">

            <TextView
                android:id="@+id/firstNameTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="First Name"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/borderLine2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/firstNameTitle" />

            <TextView
                android:id="@+id/firstNameText"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="First Name"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/borderLine2" />

            <EditText
                android:id="@+id/firstNameEditor"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/light_orange"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/borderLine2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lastNameLayout"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/firstNameLayout"
            app:layout_constraintStart_toStartOf="@id/firstNameLayout"
            app:layout_constraintTop_toTopOf="@id/firstNameLayout">

            <TextView
                android:id="@+id/lastNameTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Last Name"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/borderLine3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/lastNameTitle" />

            <TextView
                android:id="@+id/lastNameText"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Last Name"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/borderLine3" />

            <EditText
                android:id="@+id/lastNameEditor"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/light_orange"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/borderLine3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/emailLayout"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/lastNameLayout"
            app:layout_constraintStart_toStartOf="@id/lastNameLayout"
            app:layout_constraintTop_toTopOf="@id/lastNameLayout">

            <TextView
                android:id="@+id/emailTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/borderLine4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/emailTitle" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Email"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/borderLine4" />

            <EditText
                android:id="@+id/emailEditor"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/light_orange"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:inputType="textEmailAddress"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/borderLine4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/phoneNumberLayout"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/emailLayout"
            app:layout_constraintStart_toStartOf="@id/emailLayout"
            app:layout_constraintTop_toTopOf="@id/emailLayout">

            <TextView
                android:id="@+id/phoneNumberTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/borderLine5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/phoneNumberTitle" />

            <TextView
                android:id="@+id/phoneNumberText"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Phone Number"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/borderLine5" />

            <EditText
                android:id="@+id/phoneNumberEditor"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/light_orange"
                android:hint="Phone Number"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:inputType="text"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/borderLine5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imageLayout"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/phoneNumberLayout"
            app:layout_constraintStart_toStartOf="@id/phoneNumberLayout"
            app:layout_constraintTop_toTopOf="@id/phoneNumberLayout">

            <TextView
                android:id="@+id/imageTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Profile Image URL"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/borderLine6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/imageTitle" />

            <TextView
                android:id="@+id/imageText"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Image Url"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/borderLine6" />

            <EditText
                android:id="@+id/imageEditor"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/light_orange"
                android:hint="Image Url"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/borderLine6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/passwordLayout"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/imageLayout"
            app:layout_constraintStart_toStartOf="@id/imageLayout"
            app:layout_constraintTop_toTopOf="@id/imageLayout">

            <TextView
                android:id="@+id/passwordTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/borderLine7"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/passwordTitle" />

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Password"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/borderLine7" />

            <EditText
                android:id="@+id/passwordEditor"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/light_orange"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:inputType="textVisiblePassword"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/borderLine7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ToggleButton
            android:id="@+id/editProfileBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="20dp"
            android:textOff="Edit"
            android:textOn="Editing..."
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/saveProfileBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="SAVE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.718"
            app:layout_constraintStart_toEndOf="@+id/editProfileBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>